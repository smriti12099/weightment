<core:FragmentDefinition xmlns:core="sap.ui.core" 
    xmlns:form="sap.ui.layout.form" xmlns="sap.m" >
    <Dialog title="Gate Entry Cancel" contentWidth="500px">
        <content>
            <form:SimpleForm editable="true"
                layout="ResponsiveGridLayout"
                columnsM="1"
                columnsL="1"
                columnsXL="1" >
                <form:content>
                    <Label text="Cancellation Remark" design="Bold" required="true" />
                    <TextArea id="idCancelRemark"  />
                </form:content>
            </form:SimpleForm>
        </content>
        <Toolbar>
            <ToolbarSpacer/>
            <Button type="Emphasized" text="Cancel" press="onConfirmCancel" />
            <Button text="{i18n>close}" press="onCloseCancel" />
        </Toolbar>
    </Dialog>
</core:FragmentDefinition>
