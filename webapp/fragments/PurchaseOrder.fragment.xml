	<Dialog title="Select Purchase Order" contentHeight="50%" contentWidth="50%" >
		<Table items="{/PoHead}" noDataText="No Purchase Order Found" growing="true" growingThreshold="100">
			<columns>
				<Column>
					<header>
						<Text text="Purchase Order" />
					</header>
				</Column>
				<Column>
					<header>
						<Text text="Purchase Order Type" />
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Active" press="onSelectPurchaseOrder">
					<cells>
						<Text text="{PurchasingDoc}" />
						<Text text="{PoType}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<endButton>
			<Button text="Close" press="handleClosePurchaseOrdVH" />
		</endButton>
	</Dialog>
</core:FragmentDefinition>