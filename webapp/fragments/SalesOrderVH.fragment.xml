	<Dialog title="Select Sales Order" contentWidth="50%" contentHeight="50%" >
		<Table items="{/SoHead}" noDataText="No Sales Order Found" growing="true" growingThreshold="100" >
			<columns>
				<Column>
					<header>
						<Text text="Sales Order" />
					</header>
				</Column>
				<Column>
					<header>
						<Text text="Sales Order Type" />
					</header>
				</Column>
			</columns>
			<items>
				<ColumnListItem vAlign="Middle" type="Active" press="onSelectSalesOrd">
					<cells>
						<Text text="{SalesOrder}" />
						<Text text="{SalesOrderType}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
		<endButton>
			<Button text="Close" press="handleCloseSalesOrdVH"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>