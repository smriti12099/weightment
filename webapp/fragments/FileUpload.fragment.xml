<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified"
        xmlns:f="sap.ui.layout.form">
    <Dialog
        id="uploadDialog"
        title="Upload File"
        draggable="true"
        resizable="true"
        contentWidth="30rem"
        contentHeight="8rem">
        
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="4"
                labelSpanM="4"
                adjustLabelSpan="false"
                emptySpanL="0"
                emptySpanM="0"
                columnsL="2"
                columnsM="1">
                <Label text="Select File" design="Bold" />
                <u:FileUploader id="FileUploaderId" sameFilenameAllowed="true" iconOnly="false" fileType="XLSX,xlsx" style="Emphasized" />
            </f:SimpleForm>
        </content>
        
        <endButton>
            <Button text="Close" type="Transparent" press="onCloseUploadDialog" />
        </endButton>
        
        <beginButton>
            <Button text="Upload" type="Emphasized" press="onUploadPress" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>